<!doctype html>
<html lang="en">
  <head>
    <title>Final Project</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" >
    <link rel="stylesheet" href="index.css">
  </head>
  <body>
      <%- include('partials/navBar') %>

      
      <div class="contain" style="position: relative; text-align: center; color: white;">
        <img src="ram4.jpg" class="img-fluid" style="width:100%; margin-bottom: 20px;">
      </div>

    <div class="container">
      <div class="row">
        <% characters.forEach((character) =>{ %>
          <div class="col-sm">
            <div class="card" style="width: 18rem;">
                  <img src="<%= character.image %>" class="card-img-top" alt="charcter">
                  <div class="card-body">
                  <h5 class="card-title"><%=character.name%></h5>
                  <p class="card-text">Status: <%=character.status%></p>
                  <p class="card-text">Gender: <%=character.gender%></p>
                  <p class="card-text">Species: <%=character.species%></p>

                      <button><a href="ram/<%= character.id %>"> Click Here</a></button>
                  </div>
              </div>
          </div>
          
          <% }); %>
      </div>
    </div>
    
     
    <footer class="page-footer font-small">
        <div class="footer-copyright text-center py-3">Data provided by
            <a href="https://rickandmortyapi.com/"> Rick and Morty API </a>
        </div>
    </footer>
  </body>
</html>

